---
import { getCollection } from "astro:content";
import SidebarTree from "./SidebarTree.astro";

const previews = await getCollection("previews");
---

<div
  class="p-4 rounded-md bg-fg-1 border border-stroke-1 flex flex-col gap-3 col-span-1 h-full"
>
  <a
    href="/"
    class="text-h1 font-black hover:text-blue-400 duration-150 ease-out w-fit"
    >KOR UI</a
  >
  <hr class="border-neutral-700" />
  <SidebarTree items={previews} />
  <div class="flex-grow"></div>
  <a href="https://github.com/K0Rhq/un" class="text-xs text-neutral-500"
    >unPreview v0.1.1-alpha</a
  >
</div>
